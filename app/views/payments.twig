<table class="table table-striped">
    <thead>
    <tr>
        <th>id</th>
        <th>Сумма</th>
        <th>Дата</th>
    </tr>
    </thead>
    <tbody>
    {% for payment in payments %}
        <tr>
            <td>{{ payment.id }}</td>
            <td>{{ payment.amount }}</td>
            <td>{{ payment.datetime|date('Y.m.d H:i') }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<div class="row">
    <div class="col-xs-6">
        <h2>Отправить платёж от Системы №1</h2>
        <form action="/api/ps/one/" method="GET">
            <div class="form-group">
                <label>user_id</label>
                <input type="text" name="a" value="{{ user_id }}" class="form-control"/>
            </div>
            <div class="form-group">
                <label>amount</label>
                <input type="text" name="b" placeholder="Введите сумму зачисления" class="form-control"/>
            </div>
            <!--div class="form-group">
                <label>payment_id</label>
                <input type="text" name="payment_id" placeholder="ID платежа" class="form-control"/>
            </div-->
            <input type="hidden" name="md5" value=""/>
            <input type="submit" value="Отправить" class="btn btn-success"/>
        </form>
    </div>
    <div class="col-xs-6">
        <h2>Отправить платёж от Системы №2</h2>
        <form action="/api/ps/two/" method="get">
            <div class="form-group">
                <label>user_id</label>
                <input type="text" name="x" value="{{ user_id }}" class="form-control"/>
            </div>
            <!--div class="form-group">
                <label>order_id</label>
                <input type="text" name="y" placeholder="ID заказа" class="form-control"/>
            </div-->
            <div class="form-group">
                <label>sum</label>
                <input type="text" name="y" placeholder="Сумма" class="form-control"/>
            </div>
            <input type="hidden" name="md5" value=""/>
            <input type="submit" value="Отправить" class="btn btn-success"/>
        </form>
    </div>
</div>